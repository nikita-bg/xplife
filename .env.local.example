# ============================================================
# NextAuth Admin Authentication (NEW)
# ============================================================
# Admin panel authentication credentials

# Base URL for NextAuth (change in production)
NEXTAUTH_URL=http://localhost:3000

# Secret key for JWT encryption (REQUIRED - min 32 characters)
# Generate with: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET=your_random_secret_key_min_32_chars_long_change_me

# Admin credentials (hardcoded single user)
ADMIN_EMAIL=admin@xplife.app
ADMIN_PASSWORD=your_secure_password_here

